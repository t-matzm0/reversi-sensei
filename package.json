{
  "name": "reversi-sensei",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -H 0.0.0.0",
    "dev:local": "next dev",
    "dev:wsl": "HOSTNAME=0.0.0.0 next dev -p 3000",
    "dev:docker": "docker-compose up",
    "build": "next build",
    "start": "next start",
    "start:prod": "next start -H 0.0.0.0",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "husky install",
    "build:firebase:staging": "BUILD_TARGET=firebase next build",
    "build:firebase:production": "BUILD_TARGET=firebase next build",
    "deploy:staging": "npm run build:firebase:staging && firebase use staging && firebase deploy --only hosting:staging",
    "deploy:production": "npm run build:firebase:production && firebase use production && firebase deploy --only hosting:production",
    "serve:firebase": "firebase emulators:start --only hosting"
  },
  "dependencies": {
    "next": "14.2.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.14.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.3",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "jest": "^30.0.1",
    "jest-environment-jsdom": "^30.0.1",
    "lint-staged": "^15.2.7",
    "postcss": "^8.4.38",
    "prettier": "^3.3.2",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.4.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
